<h2>Sign Up</h2>

<div class="container">
  <div class="row">
    <%= message %>
    <div class="col-sm-6 centered-form">

      <form action="/signup" method="post" enctype="multipart/form-data">

        <div class="form-group">
          <label for="username">Username</label>
          <br>
          <input id="username" type="text" name="signupUsername" class="form-control">
          <br><br>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <br>
          <input id="email" type="text" name="signupEmail" class="form-control">
          <br><br>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <br>
          <input id="password" type="password" name="signupPassword" class="form-control">
          <br><br>
        </div>

        <div class="form-group">
          <label for="image-url">Profile Image</label>
          <br>
          <input id="image-url" type="file" name="filename" class="form-control">
          <br><br>
        </div>

        <button type="submit">Signup</button>
      </form>
    </div>
  </div>
</div>
